<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@color/white">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/item_mainlv_iv"
        android:src="@mipmap/ic_lifestyle_fs"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/item_mainlv_iv"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_mainlv_title"
            android:text="Beverages"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_mainlv_tv_remark"
            android:text="A cup of coffee"
            android:layout_marginTop="5dp"
            android:textSize="12sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_mainlv_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RM 5.00"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_mainlv_tv_time"
            android:text="Today 10:00"
            android:layout_marginTop="5dp" />
    </LinearLayout>
</RelativeLayout>