<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/item_overview_iv"
        android:src="@mipmap/in_other2_fs"
        android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/item_overview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/item_overview_iv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_overview_percentage"
            android:text="22.33%"
            android:textSize="16sp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/item_overview_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RM 100.00"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>


</RelativeLayout>